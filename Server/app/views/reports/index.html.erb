<h1>iphone sales reports</h1>
<p>sales reports are updated daily</p>
<h2>Total Sales over all time: <%= @total_sales %> $<%= @total_sales * 1.4 %></h2>
<h3>Total Sales this month: <%= @sales_this_month %> $<%= @sales_this_month * 1.4 %></h3>

<div style="margin:60px">
<div id="report-visualize"></div>
</div>

<table id="report">
  <caption><%= @reports.first.product %></caption>
  <thead>
    <tr>
      <td>Date</td>
      <th>Units</th>
    </tr>
  </thead>
  <tbody>
<% for report in @reports do %>
  <tr>
    <th><%= report.date %></th>
    <td><%= report.units %></td>
  </tr>
<% end %>
  </tbody>
</table>

<% content_for :head do %>
  <%= stylesheet_link_tag 'visualize.jQuery' %>
<% end %>
<% content_for :foot do %>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script>
<!--[if IE]><script type="text/javascript" src="/javascripts/excanvas.compiled.js"></script><![endif]-->
<script type="text/javascript" src="/javascripts/visualize.jQuery.js"></script>
<script type="text/javascript" src="/javascripts/editabletable.js"></script>
<script type="text/javascript">
  $('#report').visualize({width:850}).appendTo('#report-visualize');
</script>
<% end %>
